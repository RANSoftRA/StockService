<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_stockId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tv_stockPrice"
        android:layout_toLeftOf="@id/tv_stockPrice"
        android:padding="10dp"
        android:textSize="16sp" 
        android:clickable="true"
	    android:onClick="go_to_details"
	    android:background="@drawable/text_color" />
        
	<TextView
	    android:id="@+id/tv_stockPrice"
	    android:layout_width="110dip"
	    android:layout_height="wrap_content"
	    android:layout_alignParentEnd="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/pressed_color"
	    android:padding="10dp"
	    android:gravity="end"
	    android:textSize="16sp" />

</RelativeLayout>